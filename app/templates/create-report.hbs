<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">Создание доклада</h2>
    <form class="edit-form" onsubmit={{action "createReport"}}>
      <div class="form-group row">
        <label for="inputTitle" class="col-sm-2 col-form-label text-right">Спикер</label>
        <div class="col-sm-10">
          {{#power-select class="selectpicker form-control dropdown-filter-control" title="Спикер..." allowClear=true onchange=(action "changeSpeaker") options=model.speakers selected=selectedSpeaker searchField="fullName" as |speaker|}}
            {{speaker.fullName}}
          {{/power-select}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputTitle" class="col-sm-2 col-form-label text-right">Название</label>
        <div class="col-sm-10">
          {{#power-select class="selectpicker form-control dropdown-filter-control" title="Книга..." allowClear=true onchange=(action "changeBook") options=model.books selected=selectedBook searchField="title" as |book|}}
            {{book.title}}
          {{/power-select}}
          </div>
      </div>
      <div class="form-group row">
        <label for="inputAuthor" class="col-sm-2 col-form-label text-right">Автор</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control form-control-lg" placeholder="Фамилия И.О. автора" value=author}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">Объем</label>
        <div class="col-sm-10">
          {{input type="number" class="form-control form-control-lg" placeholder="Количество страниц книги" value=pages}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">Описание</label>
        <div class="col-sm-10">
          {{input type="url" class="form-control form-control-lg" placeholder="Ссылка на сайт с описанием книги" value=descripURL}}
        </div>
      </div>
      <div class="form-group row">
        <label for="customFile" class="col-sm-2 col-form-label text-right">Обложка</label>
        {{input-file class="input-group input-group-lg col-sm-10" uploadData=uploadData uploadDataChanged=(action "changeUploadData")}}
      </div>
      <div class="form-group row">
        <label for="inputTags" class="col-sm-2 col-form-label text-right">Теги</label>
        <div class="col-sm-10">
          {{input-tags tags=tags onChange=(action "changeTags")}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
          {{#link-to "book" class="btn btn-outline-secondary btn-lg" }}Отмена{{/link-to}}
        </div>
      </div>
    </form>
  </div>
</div>