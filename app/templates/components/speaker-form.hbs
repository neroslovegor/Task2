<form class="edit-form" onsubmit={{action "submitForm"}}>
  <div class="form-group row">
    <label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control form-control-lg" placeholder="Введите фамилию" value=lastName}}
      {{#if (and isInvalid (v-get this 'lastName' 'isInvalid'))}}
        <span class="validate-message">
          {{v-get this 'lastName' 'message'}}
        </span>
      {{/if}}
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control form-control-lg" placeholder="Введите имя" value=firstName}}
      {{#if (and isInvalid (v-get this 'firstName' 'isInvalid'))}}
        <span class="validate-message">
          {{v-get this 'firstName' 'message'}}
        </span>
      {{/if}}
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control form-control-lg" placeholder="Введите отчество" value=middleName}}
      {{#if (and isInvalid (v-get this 'middleName' 'isInvalid'))}}
        <span class="validate-message">
          {{v-get this 'middleName' 'message'}}
        </span>
      {{/if}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12 text-right">
      <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
      {{#link-to "speaker" class="btn btn-outline-secondary btn-lg" }}Отмена{{/link-to}}
    </div>
  </div>
</form>